{
  "compilerOptions": {
    "module": "NodeNext", // or "Node16"
    "moduleResolution": "NodeNext", // or "Node16"
    "esModuleInterop": true,
    "target": "ES2020",
    "strict": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}